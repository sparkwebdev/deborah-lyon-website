<!-- Services Section -->
<section class="section section-services bg-light" id="services">
    <div class="container">
        <h2>{{ services.heading }}</h2>
        <p>{{ services.intro }}</p>
        <div class="grid">
            {% for service in services.items %}
            <div class="card bg-mid">
                <img src="{{ service.image }}" alt="{{ service.title }}">
                <div class="card__content">
                    <h3>{{ service.title }}</h3>
                    <p>{{ service.description }}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
