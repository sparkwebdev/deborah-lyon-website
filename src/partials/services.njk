<!-- Services Section -->
<section class="section" id="services">
    <div class="container">
        <h2>{{ services.heading }}</h2>
        <p class="service-intro">{{ services.intro }}</p>
        <div class="feature-grid">
            {% for service in services.items %}
            <div class="card service-card">
                <div class="service-image"><img src="{{ service.image }}" alt="{{ service.title }}"></div>
                <div class="service-content">
                    <h3>{{ service.title }}</h3>
                    <p>{{ service.description }}</p>
                    <div class="benefits-wrapper hidden">
                        <button class="btn btn--rect see-benefits-btn" onclick="toggleBenefits(this)">See Benefits</button>
                        <div class="benefits-tooltip">
                            <p>{{ service.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
