<!-- About -->
<section class="section bg-light">
    <div class="container">
        <div class="about-content">
            <div class="about-image">
                <img src="{{ about.image }}" alt="{{ about.imageAlt }}" loading="lazy">
            </div>
            <div class="about-text">
                <p>{{ about.intro | markdown | safe }}</p>

                <p>{{ about.servicesOffered | markdown | safe }}</p>
                <p class="feature-highlight">{{ about.specialQualification }}</p>

                <div class="read-more-container">
                    <button class="btn btn--rect read-more-btn" onclick="toggleReadMore()">{{ about.readMoreButtonText }}</button>

                    <div class="read-more-content" id="readMoreContent">
                        {% for paragraph in about.expandedContent %}
                        <p>{{ paragraph }}</p>
                        {% endfor %}

                        <p>{{ about.treatmentListIntro }}</p>
                        <ul class="tick-list">
                            {% for treatment in about.treatments %}
                            <li>âœ“ {{ treatment }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
