<!-- About -->
<section class="section section-about bg-light">
    <div class="container">
        <div class="grid">
            <img class="section-about__image" src="{{ about.image }}" alt="{{ about.imageAlt }}" loading="lazy">
            <div class="section-about__text">
                <p>{{ about.intro | markdown | safe }}</p>

                <p>{{ about.servicesOffered | markdown | safe }}</p>

                <ul class="tick-list">
                    {% for qualification in about.specialQualifications %}
                    <li>{{ qualification }}</li>
                    {% endfor %}
                </ul>

                <button class="btn btn--full" onclick="document.getElementById('aboutDialog').showModal()">{{ about.readMoreButtonText }}</button>

            </div>
        </div>
        <dialog class="section-about__dialog bg-mid" id="aboutDialog">
            <div class="section-about__dialog-content">
                <button class="section-about__dialog-close btn" aria-label="Close" onclick="document.getElementById('aboutDialog').close()">&times;</button>
                {{ about.expandedContent | markdownFull | safe }}
                <button class="section-about__dialog-close-text btn btn--full" onclick="document.getElementById('aboutDialog').close()">Close</button>
            </div>
        </dialog>
    </div>
</section>
