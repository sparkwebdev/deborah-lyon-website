<!-- Benefits -->
<section class="section bg-light" id="benefits">
    <div class="container">
        <div class="benefits__grid">
            <div class="benefits__image">
                <img src="{{ benefits.image }}" alt="{{ benefits.imageAlt }}">
            </div>
            <div class="benefits__intro text-left">
                <h3>{{ benefits.heading }}</h3>
                {% for paragraph in benefits.introParagraphs %}
                <p>{{ paragraph }}</p>
                {% endfor %}
            </div>
        </div>

        <div class="benefits__box bg-mid">
            <h3>{{ benefits.listHeading }}</h3>
            <ul class="tick-list benefits__list">
                {% for benefit in benefits.list %}
                <li>âœ“ {{ benefit }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</section>
