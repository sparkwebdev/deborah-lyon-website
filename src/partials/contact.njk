<!-- Contact -->
<section class="section bg-light" id="contact">
    <div class="container">
        <h2>Get In Touch</h2>
        <div class="contact">
            <div class="contact__details">
                <h3>Contact Details</h3>
                <p><strong>Phone:</strong> {{ site.contact.phone }}</p>
                <p><strong>Email:</strong> <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a></p>
                <p><strong>Address:</strong><br>
                {{ site.contact.address | replace("\n", "<br>") | safe }}</p>
            </div>

            <div class="contact__map">
                <img src="{{ site.contact.mapImage }}" alt="Map Location">
            </div>

            <div class="contact__hours">
                <h3>Opening Hours</h3>
                <div class="contact__day">
                    <span>Monday</span>
                    <span>{{ site.contact.openingHours.monday }}</span>
                </div>
                <div class="contact__day">
                    <span>Tuesday</span>
                    <span>{{ site.contact.openingHours.tuesday }}</span>
                </div>
                <div class="contact__day">
                    <span>Wednesday</span>
                    <span>{{ site.contact.openingHours.wednesday }}</span>
                </div>
                <div class="contact__day">
                    <span>Thursday</span>
                    <span>{{ site.contact.openingHours.thursday }}</span>
                </div>
                <div class="contact__day">
                    <span>Friday</span>
                    <span>{{ site.contact.openingHours.friday }}</span>
                </div>
                <div class="contact__day">
                    <span>Saturday</span>
                    <span>{{ site.contact.openingHours.saturday }}</span>
                </div>
                <div class="contact__day">
                    <span>Sunday</span>
                    <span>{{ site.contact.openingHours.sunday }}</span>
                </div>
            </div>
        </div>
    </div>
</section>
