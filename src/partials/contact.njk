<!-- Contact -->
<section class="section contact bg-light" id="contact">
    <div class="container">
        <h2>Get In Touch</h2>
        <div class="grid">
            <div class="contact__details">
                <h3>Contact Details</h3>
                <p><strong>Phone:</strong> {{ site.contact.phone }}</p>
                <p><strong>Email:</strong> <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a></p>
                <p><strong>Address:</strong><br>
                {{ site.contact.address | replace("\n", "<br>") | safe }}</p>
            </div>

            <div>
                <img src="{{ site.contact.mapImage }}" alt="Map Location" class="contact__map">
            </div>

            <div>                                                                                                                                                             
                <h3>Opening Hours</h3>   
                <table class="contact__opening">
                    <tbody>
                        <tr>
                            <th>Monday</th>
                            <td>{{ site.contact.openingHours.monday }}</td>
                        </tr>
                        <tr>
                            <th>Tuesday</th>
                            <td>{{ site.contact.openingHours.tuesday }}</td>
                        </tr>
                        <tr>
                            <th>Wednesday</th>
                            <td>{{ site.contact.openingHours.wednesday }}</td>
                        </tr>
                        <tr>
                            <th>Thursday</th>
                            <td>{{ site.contact.openingHours.thursday }}</td>
                        </tr>
                        <tr>
                            <th>Friday</th>
                            <td>{{ site.contact.openingHours.friday }}</td>
                        </tr>
                        <tr>
                            <th>Saturday</th>
                            <td>{{ site.contact.openingHours.saturday }}</td>
                        </tr>
                        <tr>
                            <th>Sunday</th>
                            <td>{{ site.contact.openingHours.sunday }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
