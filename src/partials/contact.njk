<!-- Contact -->
<section class="section contact bg-light" id="contact">
    <div class="container">
        <h2>{{ site.contact.heading }}</h2>
        {% if site.contact.intro %}<p class="section-intro">{{ site.contact.intro }}</p>{% endif %}
        <div class="grid">
            <div class="contact__details">
                <h3>Contact Details</h3>
                <p><strong>Phone:</strong> <a href="tel:{{ site.contact.phone }}">{{ site.contact.phone | formatPhone }}</a></p>
                <p><strong>Email:</strong> <a href="mailto:{{ site.contact.email }}">{{ site.contact.email }}</a></p>
                <p><strong>Address:</strong><br>
                {{ site.contact.address.streetAddress }},<br>
                {{ site.contact.address.locality }},<br>
                {{ site.contact.address.region }},<br>
                {{ site.contact.address.postalCode }}</p>
            </div>

            <div>
                <img src="{{ site.contact.mapImage }}" alt="Map showing location of {{ site.contact.address.streetAddress }}, {{ site.contact.address.locality }}" class="contact__map">
            </div>

            <div>
                <h3>Opening Hours</h3>
                <table class="contact__opening">
                    <tbody>
                        {% for hours in site.contact.openingHours %}
                        <tr>
                            <th scope="row">{{ hours.day }}</th>
                            <td>{% if hours.closed %}Closed{% else %}{{ hours.opens | formatTime }} - {{ hours.closes | formatTime }}{% endif %}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
