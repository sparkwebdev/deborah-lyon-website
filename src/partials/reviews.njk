<!-- Reviews -->
<section class="section section-reviews" id="reviews">
    <div class="container">
        <h2>{{ reviews.heading }}</h2>
        {% if reviews.intro %}<p class="section-intro">{{ reviews.intro }}</p>{% endif %}
        <div class="reviews__slideshow" aria-live="polite">
            {% for review in reviews.items %}
            <article class="reviews__item bg-mid{% if loop.first %} active{% endif %}">
                <div class="reviews__header">
                    <div>
                        <h3 class="reviews__author">{{ review.author }}</h3>
                        <div class="reviews__date">{{ review.date }}</div>
                    </div>
                    <div class="reviews__stars" aria-label="{{ review.stars }} out of 5 stars">{% for i in range(0, review.stars) %}â˜…{% endfor %}</div>
                </div>
                <h4 class="reviews__title">{{ review.title }}</h4>
                <div>"{{ review.text }}"</div>
            </article>
            {% endfor %}

            <!-- Navigation Arrows -->
            <button class="reviews__nav reviews__nav--prev btn" data-dir="-1" aria-label="Previous review"></button>
            <button class="reviews__nav reviews__nav--next btn" data-dir="1" aria-label="Next review"></button>
        </div>
        <div class="reviews__dots-container" role="tablist" aria-label="Review navigation">
            {% for review in reviews.items %}
            <button class="reviews__dot{% if loop.first %} active{% endif %}" type="button" aria-label="Go to review {{ loop.index }}"></button>
            {% endfor %}
        </div>
    </div>
</section>
