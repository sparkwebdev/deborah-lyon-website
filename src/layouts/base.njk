<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% set pageTitle = meta.title or (site.taglines.siteName + ' ' + site.taglines.siteSubtitle + ' - ' + site.taglines.siteLocation) %}
    {% set pageDescription = meta.description or (site.taglines.siteName + ' ' + site.taglines.siteSubtitle + ' - ' + site.taglines.siteLocation + '. ' + site.taglines.tagline) %}

    <meta name="description" content="{{ pageDescription }}">
    <meta name="keywords" content="{{ meta.keywords }}">
    <title>{{ pageTitle }}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.siteUrl }}">
    <meta property="og:title" content="{{ pageTitle }}">
    <meta property="og:description" content="{{ pageDescription }}">
    <meta property="og:image" content="{{ site.siteUrl }}/{{ about.image }}">
    <meta property="og:locale" content="en_GB">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ pageTitle }}">
    <meta name="twitter:description" content="{{ pageDescription }}">
    <meta name="twitter:image" content="{{ site.siteUrl }}/{{ about.image }}">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ site.siteUrl }}">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ site.favicon }}">
    <link rel="apple-touch-icon" href="{{ site.favicon }}">

    <!-- Preload LCP image -->
    <link rel="preload" as="image" href="/img/hero.jpg" fetchpriority="high">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;1,400&family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="/style.css">

    <!-- Structured Data - LocalBusiness -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "HealthAndBeautyBusiness",
        "name": "{{ site.taglines.siteName }} {{ site.taglines.siteSubtitle }}",
        "description": "{{ pageDescription }}",
        "url": "{{ site.siteUrl }}",
        "telephone": "{{ site.contact.phone }}",
        "email": "{{ site.contact.email }}",
        "image": "{{ site.siteUrl }}/{{ about.image }}",
        "address": {
            "@type": "PostalAddress",
            "streetAddress": "{{ site.contact.address.streetAddress }}",
            "addressLocality": "{{ site.contact.address.locality }}",
            "addressRegion": "{{ site.contact.address.region }}",
            "postalCode": "{{ site.contact.address.postalCode }}",
            "addressCountry": "{{ site.contact.address.country }}"
        },{% if site.contact.geo.latitude and site.contact.geo.longitude %}
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": {{ site.contact.geo.latitude }},
            "longitude": {{ site.contact.geo.longitude }}
        },{% endif %}
        "openingHoursSpecification": [{% for hours in site.contact.openingHours %}{% if not hours.closed %}
            {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": "{{ hours.day }}",
                "opens": "{{ hours.opens }}",
                "closes": "{{ hours.closes }}"
            }{% if not loop.last %},{% endif %}{% endif %}{% endfor %}
        ],
        "priceRange": "££",
        "areaServed": {{ site.areaServed | dump | safe }},
        "sameAs": []
    }
    </script>
</head>
<body>
    <!-- Header -->
    <header class="section header">
        <div class="header__content container">
            <h1 class="header__title">
                <span class="header__name">{{ site.taglines.siteName }}</span>
                <span class="header__subtitle">{{ site.taglines.siteSubtitle }}</span>
            </h1>
            <a href="{{ site.contact.bookingUrl }}" class="btn" target="_blank" rel="noopener noreferrer">Book Now <span class="sr-only">(opens in new tab)</span></a>
        </div>
    </header>

    <main id="main">
    {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark section">
        <div class="container">
            <div class="grid">
                <div>
                    <h3>{{ site.taglines.siteName }} {{ site.taglines.siteSubtitle }}</h3>
                    <p>{{ site.taglines.tagline }}</p>
                </div>
                <div class="footer__memberships">
                    <h3>Professional Memberships</h3>
                    <div class="footer__badges">
                        {% for item in site.memberships %}
                        <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer" class="footer__badge">{{ item.name }} <small aria-hidden="true">↗</small><span class="sr-only">(opens in new tab)</span></a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="footer__copyright">
                <p><span>&copy; {{ currentYear }}</span> <span>{{ site.taglines.siteName }}. All rights reserved.</span></p>
            </div>
        </div>
    </footer>

    <script src="/script.js"></script>
</body>
</html>
